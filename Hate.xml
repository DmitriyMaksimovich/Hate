<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
  <Assets>
  </Assets>

  <Scripts>
    <Script file="Hate.lua" />
  </Scripts>

  <Windows>
    <Window name="HateWindow" layer="default" movable="false" popable="false" sticky="true" savesettings="true" handleinput="true">
      <Size>
        <AbsPoint x="50" y="50" />
      </Size>

      <Anchors>
        <Anchor point="center" relativePoint="center" relativeTo="Root">
          <AbsPoint x="0" y="0" />
        </Anchor>
      </Anchors>

      <Windows>
        <FullResizeImage name="$parentBackground" inherits="EA_FullResizeImage_BlackTransparent" layer="background" alpha="0.5" handleinput="false">
            <Anchors>
                <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                    <AbsPoint x="0" y="0"/>
                </Anchor>
                <Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
                    <AbsPoint x="0" y="0"/>
                </Anchor>
            </Anchors>
        </FullResizeImage>

        <Label name="$parentCounter" font="font_clear_large_bold" autoresize="true" textalign="leftcenter" layer="overlay" alpha="1" popable="false" handleinput="false">
          <Size>
            <AbsPoint x="50" y="50" />
          </Size>
          <Anchors>
            <Anchor point="center" relativePoint="center" relativeTo="$parent">
              <AbsPoint x="10" y="0" />
            </Anchor>
          </Anchors>
          <Color r="255" g="255" b="255" />
        </Label>
      </Windows>
    </Window>
  </Windows>

</Interface>
